{
  "name": "@qzd/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "pnpm --filter @qzd/ledger build && pnpm --filter @qzd/sdk-api build",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "dev": "node --loader ts-node/esm --experimental-specifier-resolution=node src/main.ts",
    "test": "vitest run",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@noble/curves": "^1.6.0",
    "@noble/hashes": "^1.6.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@qzd/ledger": "workspace:*",
    "@qzd/sdk-api": "workspace:*",
    "@qzd/shared": "workspace:*",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.21",
    "@types/supertest": "^2.0.16",
    "@types/node": "^20.11.0",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
